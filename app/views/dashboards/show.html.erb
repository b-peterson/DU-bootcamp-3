<br />

<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">What I'm Learning</h1>
    <% current_user.enrolled_courses.each do |course| %>
    <div class="booyah-box col-10 offset-1">
        <div class="row">
            <div class="col col-12">
                <h2>
                    <%= link_to course.title, course_path(course), class: 'course-title' %>
                </h2>
                <hr>
            </div>
            <div class="col col-12">
                <div class="row description-box">
                    <div class="col-9 course-descript">
                        <%= course.description %>
                    </div>
                    <div class="col col-3">
                        <% if course.image.present? %>
                            <%= image_tag course.image.url, class: 'contain-img' %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <%= link_to 'See Course', course_path(course), class: 'btn btn-success btn-large float-right' %>
            </div>
        </div>
        <br />
    </div>
    <% end %>
    <br class="clr" />
    <br />
    <h1 class="text-center">What I'm Teaching</h1>
    <% current_user.courses.each do |course| %>
        <div class="booyah-box col-10 offset-1">
            <div class="row">
                <div class="col col-12">
                    <h2>
                        <%= link_to course.title, course_path(course), class: 'course-title' %>
                    </h2>
                    <hr>
                </div>
                <div class="col col-12">
                    <div class="row description-box">
                        <div class="col-9 course-descript">
                            <%= course.description %>
                        </div>
                        <div class="col col-3">
                            <% if course.image.present? %>
                                <%= image_tag course.image.url, class: 'contain-img' %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <%= link_to 'See Course', course_path(course), class: 'btn btn-success btn-large float-right' %>
                </div>
            </div>
            <br />
        </div>
    <% end %>
</div>
